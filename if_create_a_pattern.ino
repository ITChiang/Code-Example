void getRawColorData_noDelay(uint16_t *r, uint16_t *g, uint16_t *b, uint16_t *c)
{
  *c = tcs.read16(TCS34725_CDATAL);
  *r = tcs.read16(TCS34725_RDATAL);
  *g = tcs.read16(TCS34725_GDATAL);
  *b = tcs.read16(TCS34725_BDATAL);
}
 
uint8_t* getRGB() {
  uint16_t r, g, b, c;
  getRawColorData_noDelay(&r, &g, &b, &c);

  bool notWhite = true;
  float percentage_rgb[4];
  uint8_t* RGB;
  RGB = (uint8_t*) malloc (3);

  percentage_rgb[0] = r * 0.8; // LED on sensor is lightly yellow
  percentage_rgb[1] = g * 0.85;
  percentage_rgb[2] = b;
  percentage_rgb[3] = percentage_rgb[0] + percentage_rgb[1] + percentage_rgb[2];
  percentage_rgb[0] /= percentage_rgb[3];
  percentage_rgb[1] /= percentage_rgb[3];
  percentage_rgb[2] /= percentage_rgb[3];

  if (percentage_rgb[2] > B_UPPER_BOUND) {
    RGB[2] = 255;
  } else if (percentage_rgb[2] < B_LOWER_BOUND) {
    RGB[2] = 0;
  } else {
    if (percentage_rgb[0] > EQUAL_BOUND && percentage_rgb[1] > EQUAL_BOUND && percentage_rgb[2] > EQUAL_BOUND) {
      RGB[0] = 255;
      RGB[1] = 255;
      RGB[2] = 255;
      notWhite = false;
    } else{
      RGB[2] = 255 * (percentage_rgb[2] - B_LOWER_BOUND) / (B_UPPER_BOUND - B_LOWER_BOUND);
    }
  }
  if (notWhite) {
    if (percentage_rgb[1] > G_UPPER_BOUND) {
      RGB[1] = 255;
    } else if (percentage_rgb[1] < G_LOWER_BOUND) {
      RGB[1] = 0;
    } else {
      RGB[1] = 255 * (percentage_rgb[1] - G_LOWER_BOUND) / (G_UPPER_BOUND - G_LOWER_BOUND);
    }
    
    if (percentage_rgb[0] > R_UPPER_BOUND) {
      RGB[0] = 255;
    } else if (percentage_rgb[0] < R_LOWER_BOUND) {
      RGB[0] = 0;
    } else {
      RGB[0] = 255 * (percentage_rgb[0] - R_LOWER_BOUND) / (R_UPPER_BOUND - R_LOWER_BOUND);
    }
  }

  tcs.clearInterrupt();

  return RGB;
}
 
