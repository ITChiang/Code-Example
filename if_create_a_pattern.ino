    if(i%2==1)
    {
      tmp+=eachDis1;
    }
    else
    {
      tmp+=eachDis2;
      tmp2+=eachDis2;
    }
  }
}


long ledDecoder(char _char){ // translate num to color code
  switch (_char) {
    case '0':
      return 0x000000; //None Color / black
    case '1':
      return 0xFF0000; //Red
    case '2':
      return 0x0000FF; //Blue
    case '3':
      return 0x00FF00; //Green
    case '4':
      return 0xFFFAFA; //white light
    case '5':
      return 0xFFFF00; //Yellow
    case '6':
      return 0xFF00FF; //Purple
    case '7':
      return 0x00FFFF; //LightBlue
  }
}

