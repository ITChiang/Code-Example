void loop()
{
  uint16_t dist = measureDistance();

  if (isPlaying) {
    loop_play++;
    if (dist <= 50) {
      loop_play = 0;
    }
    if (loop_play > 100) { // how long the play state lasts
      isPlaying = false;
      state = (dist - 35) / 15;
      loop_play = 0;
    }
    
  } else {
    if (dist < 50) {
      loop_play = 0;
      state = 0;
    } else {
      state = (dist - 17) / 33;
    }
  }

  switch (state) {
    case 0:
      if (!isPlaying) {
        ledDisplay(DigPic4);
        isPlaying = true;
      }
      recvWithEndMarker();
      showNewData();
      break;
    case 1:
      ledDisplay(DigPic3);
      break;
    case 2:
      ledDisplay(DigPic2);
      break;
    case 3:
      ledDisplay(DigPic1);
      break;
    default:
      ledDisplay(DigPic0);
      break;
      
  }
}
