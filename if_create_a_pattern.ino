void ledPrinter(int startPos,int eachDis1, int eachDis2) // startPos the point which start, Ascending powers,Descending powers
{
  int tmp =  startPos;
  int ledCounter = 1; // change from 0 -> 1 04082020 by I-Tung 
  for(int i = 0; i < 10; i++)
  {
    for(int j  = 9; j > -1; j--) 
    {
      if(i%2==0)
      {
        leds[tmp+j] = ledDecoder(receivedChars[ledCounter]);
        ledCounter+=1;
      }
      else
      {
        leds[tmp-j] = ledDecoder(receivedChars[ledCounter]);
        ledCounter+=1;
      }      
    }

    if(i%2==1)
    {
      tmp+=eachDis1;
    }
    else
    {
      tmp+=eachDis2;
    }
  }
}

void ledPrinter2(int startPos,int eachDis1, int eachDis2) // startPos the point which start, Ascending powers,Descending powers
{
  int tmp =  startPos;
  int tmp2 = 43;
  int ledCounter = 1; // change from 0 -> 1 04082020 by I-Tung 
  for(int i = 0; i < 20; i+=2)
  {
    for(int j  = 19; j > -1; j-=2) 
    {
      if(i%2==0)
      {
        leds[tmp+j] = ledDecoder(receivedChars[ledCounter]);
        leds[tmp+j-1] = ledDecoder(receivedChars[ledCounter]);
        //----------------------------------------------------
        leds[tmp2-j] = ledDecoder(receivedChars[ledCounter]);
        leds[tmp2-j+1] = ledDecoder(receivedChars[ledCounter]);
        ledCounter+=1;
      }
      else
      {
        leds[tmp-j] = ledDecoder(receivedChars[ledCounter]);
        leds[tmp-j+1] = ledDecoder(receivedChars[ledCounter]);
